{{define "content"}}
<section>
  <div class="container container-sm">
    <nav class="mb-2" style="color: var(--text-muted); font-size: 0.875rem;">
      <a href="/">Home</a> / <a href="/datetime">Date & Time</a> / Current Time
    </nav>
    
    <div class="tool-card">
      <div class="tool-header">
        <h1 class="tool-title">Current Time</h1>
        <button class="btn btn-icon" onclick="addToFavorites('datetime-now')" title="Add to favorites">‚≠ê</button>
      </div>
      
      <p class="tool-description">
        Get the current timestamp in multiple formats including Unix, ISO 8601, and human-readable.
      </p>
      
      <form id="datetime-form" class="tool-form" onsubmit="event.preventDefault(); executeDateTimeTool();">
        <div class="form-group">
          <label class="form-label">Timezone (optional)</label>
          <input type="text" name="timezone" class="form-input" placeholder="America/New_York">
        </div>
        
        <button type="submit" class="btn btn-primary">Get Current Time</button>
      </form>
      
      <div id="datetime-result" class="tool-result" style="display:none;"></div>
      
      <div class="mt-3">
        <h3>API Endpoints</h3>
        <div class="code-block">
          <div class="code-header">
            <span class="code-lang">GET Request</span>
            <button class="btn btn-sm" onclick="copyCode(this)">Copy</button>
          </div>
          <div class="code-content">
            <pre>curl {{.BaseURL}}/api/v1/datetime/now
curl {{.BaseURL}}/api/v1/datetime/now.txt
curl {{.BaseURL}}/api/v1/datetime/now?tz=America/New_York</pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function executeDateTimeTool() {
  const form = document.getElementById('datetime-form');
  const timezone = form.timezone.value;
  const resultDiv = document.getElementById('datetime-result');
  const submitBtn = form.querySelector('button[type="submit"]');
  
  submitBtn.disabled = true;
  submitBtn.textContent = 'Loading...';
  resultDiv.style.display = 'block';
  resultDiv.innerHTML = '<div class="spinner"></div>';
  
  const url = timezone ? `/api/v1/datetime/now?tz=${encodeURIComponent(timezone)}` : '/api/v1/datetime/now';
  
  fetch(url)
    .then(response => response.json())
    .then(data => {
      resultDiv.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
      submitBtn.disabled = false;
      submitBtn.textContent = 'Get Current Time';
      addToHistory('datetime-now');
    })
    .catch(error => {
      resultDiv.textContent = `Error: ${error.message}`;
      submitBtn.disabled = false;
      submitBtn.textContent = 'Get Current Time';
      showToast('Request failed', 'danger');
    });
}
</script>
{{end}}
