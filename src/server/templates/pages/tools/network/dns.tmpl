{{define "content"}}
<section>
  <div class="container container-sm">
    <nav class="mb-2" style="color: var(--text-muted); font-size: 0.875rem;">
      <a href="/">Home</a> / <a href="/network">Network</a> / DNS Lookup
    </nav>
    
    <div class="tool-card">
      <div class="tool-header">
        <h1 class="tool-title">DNS Lookup</h1>
        <button class="btn btn-icon" onclick="addToFavorites('network-dns')" title="Add to favorites">‚≠ê</button>
      </div>
      
      <p class="tool-description">
        Query DNS records for any domain. Supports A, AAAA, CNAME, MX, TXT, NS, SOA, and more.
      </p>
      
      <form id="dns-form" class="tool-form" onsubmit="event.preventDefault(); executeDNSTool();">
        <div class="form-group">
          <label class="form-label">Domain</label>
          <input type="text" name="domain" class="form-input" placeholder="example.com" required>
        </div>
        
        <div class="form-group">
          <label class="form-label">Record Type</label>
          <select name="type" class="form-input">
            <option value="A" selected>A</option>
            <option value="AAAA">AAAA</option>
            <option value="CNAME">CNAME</option>
            <option value="MX">MX</option>
            <option value="TXT">TXT</option>
            <option value="NS">NS</option>
            <option value="SOA">SOA</option>
            <option value="PTR">PTR</option>
            <option value="SRV">SRV</option>
          </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Query DNS</button>
      </form>
      
      <div id="dns-result" class="tool-result" style="display:none;"></div>
      
      <div class="mt-3">
        <h3>API Endpoint</h3>
        <div class="code-block">
          <div class="code-header">
            <span class="code-lang">GET Request</span>
            <button class="btn btn-sm" onclick="copyCode(this)">Copy</button>
          </div>
          <div class="code-content">
            <pre>curl {{.BaseURL}}/api/v1/network/dns/example.com
curl {{.BaseURL}}/api/v1/network/dns/example.com/MX</pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function executeDNSTool() {
  const form = document.getElementById('dns-form');
  const domain = form.domain.value;
  const type = form.type.value;
  const resultDiv = document.getElementById('dns-result');
  const submitBtn = form.querySelector('button[type="submit"]');
  
  submitBtn.disabled = true;
  submitBtn.textContent = 'Querying...';
  resultDiv.style.display = 'block';
  resultDiv.innerHTML = '<div class="spinner"></div>';
  
  fetch(`/api/v1/network/dns/${domain}/${type}`)
    .then(response => response.json())
    .then(data => {
      resultDiv.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
      submitBtn.disabled = false;
      submitBtn.textContent = 'Query DNS';
      addToHistory('network-dns');
    })
    .catch(error => {
      resultDiv.textContent = `Error: ${error.message}`;
      submitBtn.disabled = false;
      submitBtn.textContent = 'Query DNS';
      showToast('Request failed', 'danger');
    });
}
</script>
{{end}}
