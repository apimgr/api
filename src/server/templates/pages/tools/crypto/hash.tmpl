{{define "content"}}
<section>
  <div class="container container-sm">
    <nav class="mb-2" style="color: var(--text-muted); font-size: 0.875rem;">
      <a href="/">Home</a> / <a href="/crypto">Crypto</a> / Hash Generator
    </nav>
    
    <div class="tool-card">
      <div class="tool-header">
        <h1 class="tool-title">Hash Generator</h1>
        <button class="btn btn-icon" onclick="addToFavorites('crypto-hash')" title="Add to favorites">‚≠ê</button>
      </div>
      
      <p class="tool-description">
        Generate cryptographic hashes using various algorithms (MD5, SHA-1, SHA-256, SHA-512, BLAKE3).
      </p>
      
      <form id="hash-form" class="tool-form" onsubmit="event.preventDefault(); executeHashTool();">
        <div class="form-group">
          <label class="form-label">Input Text</label>
          <textarea name="text" class="form-input" rows="5" placeholder="Enter text to hash..." required></textarea>
        </div>
        
        <div class="form-group">
          <label class="form-label">Algorithm</label>
          <select name="algorithm" class="form-input">
            <option value="md5">MD5</option>
            <option value="sha1">SHA-1</option>
            <option value="sha256" selected>SHA-256</option>
            <option value="sha512">SHA-512</option>
            <option value="blake3">BLAKE3</option>
          </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Generate Hash</button>
      </form>
      
      <div id="hash-result" class="tool-result" style="display:none;"></div>
      
      <div class="mt-3">
        <h3>API Endpoint</h3>
        <div class="code-block">
          <div class="code-header">
            <span class="code-lang">POST Request</span>
            <button class="btn btn-sm" onclick="copyCode(this)">Copy</button>
          </div>
          <div class="code-content">
            <pre>curl -X POST {{.BaseURL}}/api/v1/crypto/hash \
  -H "Content-Type: application/json" \
  -d '{"text": "Hello World", "algorithm": "sha256"}'</pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function executeHashTool() {
  const form = document.getElementById('hash-form');
  const text = form.text.value;
  const algorithm = form.algorithm.value;
  const resultDiv = document.getElementById('hash-result');
  const submitBtn = form.querySelector('button[type="submit"]');
  
  submitBtn.disabled = true;
  submitBtn.textContent = 'Generating...';
  resultDiv.style.display = 'block';
  resultDiv.innerHTML = '<div class="spinner"></div>';
  
  fetch('/api/v1/crypto/hash', {
    method: 'POST',
    headers: {'Content-Type': 'application/json'},
    body: JSON.stringify({text: text, algorithm: algorithm})
  })
    .then(response => response.json())
    .then(data => {
      resultDiv.innerHTML = `<pre>${JSON.stringify(data, null, 2)}</pre>`;
      submitBtn.disabled = false;
      submitBtn.textContent = 'Generate Hash';
      addToHistory('crypto-hash');
    })
    .catch(error => {
      resultDiv.textContent = `Error: ${error.message}`;
      submitBtn.disabled = false;
      submitBtn.textContent = 'Generate Hash';
      showToast('Request failed', 'danger');
    });
}
</script>
{{end}}
